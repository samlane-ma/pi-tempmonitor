<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema path="/com/github/samlane-ma/pi-temp-monitor/" 
              id="com.github.samlane-ma.pi-temp-monitor">
        <key name="celcius" type="b">
            <summary>Use Celcius</summary>
            <description>
                True will display temperature in Celcius.  False will set to Fahrenheit.
            </description>
            <default>true</default>
        </key>
        <key name="overheat" type="i">
            <summary>Overheat Threshold</summary>
            <range min="55" max="85"/>
            <description>
                The temperature in celcius at which the icon will brighten
            </description>
            <default>75</default>
        </key>
    </schema> 
</schemalist>
